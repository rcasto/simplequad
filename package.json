{
  "name": "simplequad",
  "version": "1.1.4",
  "description": "A simple quadtree implementation useful for 2D collision detection and more.",
  "main": "dist/simplequad.umd.js",
  "module": "dist/simplequad.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all clean --parallel build:*",
    "build:bundles": "rollup --config",
    "build:bundles-min": "rollup --config --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "ava",
    "test:coverage": "nyc ava",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules",
    "prepublish": "npm-run-all test build"
  },
  "author": "Richie Casto (https://github.com/rcasto)",
  "homepage": "https://github.com/rcasto/simplequad#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rcasto/simplequad.git"
  },
  "keywords": [
    "quadtree",
    "2d-collision",
    "2d-collision-library",
    "quadtree-js",
    "quadtree-lib"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ava/babel": "^1.0.0",
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-numeric-separator": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "ava": "^3.1.0",
    "npm-run-all": "4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "3.0.0",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "ava": {
    "files": [
      "test/**/*",
      "!test/helpers/*.ts"
    ],
    "ignoredByWatcher": [
      "src/**/*"
    ],
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/*.ts"
      ]
    },
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": "html"
  }
}
